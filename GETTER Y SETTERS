 #include <stdio.h>
#include <math.h>

using namespace std;


class Punto{
	private:
	    int	x,y;
	    
	public:       //metodos
       Punto();        //constructor por defecto

       //este SET va ESTABLECER o DAR valores a nuestros atributos 
       void setPunto(int, int);

         //get es MOSTRAR  toda la info
         int getPuntoX();
         int getPuntoY();
       
		
	
};

   Punto::Punto(){   //constructor 
   }
    void Punto::setPunto(int _x,int _y) {
    	x=_x
    	y=_y
	}
	
	int Punto::getPunto(){
		return x;
		
	}
	
	
        int Punto::getPuntoY(){
	         return y;
}
   }   
   int main(){
   	Punto punto1;  
   	
   	punto1.setPunto(15,13);
   	cout<<punto1.getPuntoX()<<endl;
   	cout<<punto1.getPuntoY()<<endl;
   	
   	
   	
   	system("pause");
	   return o;
   }
